{
  "name": "image-trimmer",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:electron\" \"npm:dev:vite\"",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev:vite": "vite",
    "build": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "p-limit": "^6.2.0",
    "sharp": "^0.33.4",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.image-trimmer",
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/",
      "node_modules/@img/"
    ],
    "files": [
      "dist/",
      "electron/",
      "!electron/**/*.map",
      "build/",
      "icons/"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": ["dmg", "zip"],
      "icon": "icons/mac/icon.icns"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "icons/win/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb", "zip"],
      "icon": "icons/png/1024x1024.png"
    }
  }
}
