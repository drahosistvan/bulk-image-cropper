{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "allowArbitraryExtensions": true
  },
  "include": [
    "electron/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "vite.config.ts"
  ]
}
